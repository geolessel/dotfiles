# Utility
alias reload="source ~/bin/dotfiles/bash/aliases"
alias ea="$EDITOR ~/bin/dotfiles/bash/aliases && reload"
alias eatm="mate -w ~/bin/dotfiles/bash/aliases && reload"
alias ee="$EDITOR ~/bin/dotfiles/bash/env"
alias c="clear"
alias cl="clear; l"
function ds() {
	g=`du -sh * | grep [0-9]G | sort -nr`
	m=`du -sh * | grep [0-9]M | sort -nr`
	k=`du -sh * | grep [0-9]K | sort -nr`
	echo -e "$g\n$m\n$k\n" | head -20
}

# Processes
alias tu='top -o cpu' # sort by cpu
alias tm='top -o rsize' # sort by memory

# Git
alias g="git status"
alias ga="git add"
alias gs="git status"
alias gc="git commit"
alias gca="git commit -a"
alias gco="git checkout"
alias gd="git diff"
alias gp="git push"
alias gm="git merge"
alias gf="git fetch"
alias gk="gitk --all"

# Ruby on Rails
alias ss="./script/server"
alias sg="./script/generate"
alias sp="./script/plugin install"
alias sc="./script/console"

# File System
alias l="ls -lh"
alias ll="ls -lh"
alias la="ls -A"
alias lla="ls -lhA"

# Files
alias untar="tar -xvzf"

# Programs
alias vi="/usr/local/bin/vim"
