# Utility
alias reload="source ~/bin/dotfiles/bash/aliases"
alias ea="$EDITOR ~/bin/dotfiles/bash/aliases && reload"
alias eatm="mate -w ~/bin/dotfiles/bash/aliases && reload"
alias ee="$EDITOR ~/bin/dotfiles/bash/env"
alias c="clear"
alias cl="clear; l"

# Processes
alias tu='top -o cpu' # sort by cpu
alias tm='top -o rsize' # sort by memory

# Git
alias g="git status"
alias ga="git add"
alias gs="git status"
alias gc="git commit"
alias gca="git commit -a"
alias gco="git checkout"
alias gd="git diff"
alias gp="git push"
alias gm="git merge"
alias gf="git fetch"
alias gk="gitk --all"

# Ruby on Rails
alias be="bundle exec"
alias by="bundle && yarn"

# File System
alias l="ls -lh"
alias ll="ls -lh"
alias la="ls -A"
alias lla="ls -lhA"

# Files
alias untar="tar -xvzf"

# Programs
#alias vi="/usr/local/bin/vim"
